<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/current_touch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    tools:context="com.example.star.imhi.personally.PersonalMoreActivity"
    android:background="#F5F5F5">

    <include layout="@layout/activity_title_finsh"/>
    <LinearLayout
        android:background="#fff"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:text="年龄"/>
        <EditText

            android:id="@+id/personal_age"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:text="99"
            android:maxLength="2"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:imeOptions="actionDone"
            android:cursorVisible="false"
            android:textSize="18dp"
            android:textColor="#CCCCCC"/>

    </LinearLayout>

    <LinearLayout
        android:background="#fff"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:textColor="#000"
            android:text="生日"/>

        <TextView
            android:id="@+id/set_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-12-12"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"/>
        <Button
            android:id="@+id/btn_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="修改日期"/>
    </LinearLayout>

</LinearLayout>
