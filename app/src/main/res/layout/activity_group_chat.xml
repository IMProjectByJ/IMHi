<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.star.imhi.addfriend.DetailsActivity"
    android:background="#F5F5F5">
    <!--<include layout="@layout/title"/>-->

    <include layout="@layout/activity_title"/>

    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <ImageView
            android:id="@+id/head_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/head" />
        <LinearLayout
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:text="钟山"/>
                <ImageView
                    android:id="@+id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/man"
                    android:paddingTop="20dp"
                    android:paddingLeft="5dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/group_id_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:text="微信号：10101010101"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/set_notes"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15dp"
                android:layout_marginLeft="12dp"
                android:text="创建日期"
                android:gravity="center_vertical"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/group_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-12-14"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="180dp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
        <TextView
            android:layout_width="400dp"
            android:layout_height="2dp"
            android:layout_marginLeft="12dp"
            android:background="#F4F4F4" />
        <LinearLayout
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15dp"
                android:text="群主"
                android:textColor="#000000"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/group_user_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="90dp"
                android:text="皮皮虾"
                android:textColor="#000000"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="400dp"
            android:layout_height="2dp"
            android:layout_marginLeft="12dp"
            android:background="#F4F4F4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/more"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="更多"
                android:textSize="15dp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_send"
        android:layout_marginTop="15dp"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:text="发消息"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_send"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btn_del"
        android:layout_marginTop="15dp"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:text="删除"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_del"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"/>
</LinearLayout>

